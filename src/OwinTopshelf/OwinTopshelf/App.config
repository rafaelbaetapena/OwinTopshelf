<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Configuração da porta do self-host -->
    <add key="port" value="8089" />

    <!-- Configuração da porta do self-host -->
    <add key="serilog:using:RollingFile" value="Serilog.Sinks.RollingFile" />
    <add key="serilog:write-to:RollingFile.pathFormat" value="C:\logs\owintopshelf\{Date}.txt" />
    
    <add key="serilog:using:ColoredConsole" value="Serilog.Sinks.ColoredConsole" />
    <add key="serilog:write-to:ColoredConsole"/>    
  </appSettings>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
</configuration>